{
  // Editor
  "editor.codeActionsOnSave": {
    "source.organizeImports": true
  },
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  "editor.saveOnFocus": true,
  "editor.renderLineHighlight": "gutter",
  "editor.hideCursorInOverviewRuler": true,
  "editor.scrollBeyondLastLine": true,
  // "editor.tabSize": 4,
  "editor.lineHeight": 26,
  // "editor.lineNumbers": "off",
  "editor.occurrencesHighlight": false,
  "editor.overviewRulerBorder": false,
  "editor.renderIndentGuides": true,
  "editor.folding": false,
  "editor.snippetSuggestions": "top",
  "editor.lightbulb.enabled": false,
  "editor.minimap.enabled": false,
  "editor.cursorBlinking": "solid",
  "editor.cursorStyle": "line",
  "editor.fontFamily": "Fira Code",
  "editor.fontLigatures": true,
  "editor.fontSize": 15,
  // Files
  "files.exclude": {
    "**/node_modules/": true,
    "**/.git": true,
    "**/.next": true,
    "**/.DS_Store": true,
    "**/package-lock.json": true,
    "**/yarn.lock": true,
    "vendor": true,
    "**/npm-debug.log": true,
    "**/dist": true,
    "**/*.bs.js": true
  },
  "files.associations": {
    "*.toml": "toml",
    "*.njk": "html"
  },
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,
  "files.eol": "\n",
  // Workbench
  "workbench.editor.enablePreviewFromQuickOpen": true,
  "workbench.colorTheme": "Atom One Dark",
  "workbench.preferredLightColorTheme": "Atom One Dark",
  "workbench.preferredDarkColorTheme": "Atom One Dark",
  "workbench.list.horizontalScrolling": true,
  "workbench.panel.defaultLocation": "right",
  "workbench.fontAliasing": "antialiased",
  "workbench.activityBar.visible": false,
  "workbench.startupEditor": "none",
  "workbench.settings.editor": "json",
  "workbench.editor.showIcons": false,
  "workbench.settings.enableNaturalLanguageSearch": false, // formatting only supports LF line endings
  "workbench.sideBar.location": "left",
  "workbench.editorAssociations": [
    {
      "viewType": "jupyter-notebook",
      "filenamePattern": "*.ipynb"
    }
  ],
  // Color changes
  "workbench.colorCustomizations": {
    "[GitHub Dark]": {
      "editorLineNumber.foreground": "#23292f",
      "editor.lineHighlightBackground": "#23292f"
    },
    "[GitHub Light]": {
      "editorLineNumber.foreground": "#ffffff",
      "editor.lineHighlightBackground": "#ffffff"
    }
  },
  // Window
  "window.autoDetectColorScheme": true,
  "window.restoreWindows": "all",
  "window.newWindowDimensions": "maximized",
  // Breadcrumbs
  "breadcrumbs.filePath": "on",
  "breadcrumbs.enabled": true,
  // Debug
  "debug.openDebug": "neverOpen",
  "debug.showInStatusBar": "never",
  "debug.toolBarLocation": "hidden",
  "debug.console.fontSize": 15,
  // Search
  "search.quickOpen.includeHistory": false,
  "search.searchEditor.defaultNumberOfContextLines": null,
  "search.smartCase": true,
  // "search.useIgnoreFiles": false,
  "search.exclude": {
    "**/node_modules": true,
    "**/.git": true,
    "dist": true,
    "out": true,
    "coverage": true
  },
  // Terminal
  "terminal.integrated.copyOnSelection": true,
  "terminal.integrated.fontSize": 15,
  "terminal.integrated.inheritEnv": false,
  // Explorer
  "explorer.openEditors.visible": 0,
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "explorer.decorations.badges": false,
  // Python
  "python.pythonPath": "/usr/local/bin/python3",
  "python.showStartPage": false,
  "python.linting.pylintArgs": ["--errors-only"],
  "python.insidersChannel": "off",
  "python.languageServer": "Pylance",
  // "python.pythonPath": "/Users/nikivi/anaconda3/bin/python3",
  // "python.formatting.provider": "black",
  // "python.linting.pylintEnabled": false,
  // "python.linting.flake8Enabled": true,
  // "python.linting.enabled": false,
  // Vim
  "vim.leader": " ",
  "vim.debug.silent": true,
  "vim.cursorStylePerMode.normal": "underline",
  "vim.useSystemClipboard": true,
  // Space map
  "vim.normalModeKeyBindings": [
    {
      "before": ["<leader>", "w"],
      "after": [],
      "commands": [
        {
          "command": "workbench.action.files.save",
          "args": []
        }
      ]
    },
    {
      "before": ["<leader>", "q"],
      "after": [],
      "commands": [
        {
          "command": "workbench.action.closeActiveEditor",
          "args": []
        }
      ]
    },
    {
      "before": ["<leader>", "a"],
      "after": [],
      "commands": [
        {
          "command": "workbench.action.files.save",
          "args": []
        },
        {
          "command": "workbench.action.closeActiveEditor",
          "args": []
        }
      ]
    },
    {
      "before": ["K"],
      "after": ["leader", "leader", "k"]
    },
    {
      "before": ["J"],
      "after": ["leader", "leader", "j"]
    },
    {
      "before": ["<leader>", "i"],
      "after": ["y", "i", "\""]
    },
    {
      "before": ["Y"],
      "after": ["y", "$"]
    }
  ],
  "vim.visualModeKeyBindings": [
    {
      "before": ["K"],
      "after": ["leader", "leader", "k"]
    },
    {
      "before": ["J"],
      "after": ["leader", "leader", "j"]
    }
  ],
  // Easymotion
  "vim.easymotion": true,
  "vim.easymotionMarkerBackgroundColor": "yellow",
  "vim.easymotionKeys": "hklyuiopnm,qwertzxcvbasdgjf:",
  "vim.easymotionMarkerForegroundColorOneChar": "black",
  // Go
  "go.useLanguageServer": true,
  "go.useCodeSnippetsOnFunctionSuggest": false,
  "go.languageServerExperimentalFeatures": {
    "diagnostics": true // for build and vet errors as you type
  },
  "[go]": {
    "editor.snippetSuggestions": "none",
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.organizeImports": true
    }
  },
  "gopls": {
    "usePlaceholders": true,
    "completeUnimported": true,
    "buildFlags": ["-tags", "mage"]
  },
  "go.liveErrors": {
    "enabled": true,
    "delay": 500
  },
  "go.lintTool": "golint",
  "go.lintOnSave": "package",
  // TypeScript
  "typescript.check.npmIsInstalled": false,
  "typescript.updateImportsOnFileMove.enabled": "never",
  "typescript.suggest.autoImports": true,
  // JavaScript
  "javascript.updateImportsOnFileMove.enabled": "never",
  "javascript.validate.enable": false,
  // ESLint
  "eslint.packageManager": "yarn",
  // Git
  "git.autofetch": true,
  "git.confirmSync": false,
  "git.ignoreLimitWarning": true,
  "git.enableSmartCommit": true,
  "git.ignoreMissingGitWarning": true,
  "tailwindCSS.includeLanguages": {
    "plaintext": "html"
  },
  "tailwindCSS.emmetCompletions": true,
  // GitLens
  // "gitlens.keymap": "chorded",
  // "gitlens.codeLens.scopes": ["containers", "document"],
  // "gitlens.views.fileHistory.enabled": true,
  // "gitlens.views.lineHistory.enabled": true,
  "gitlens.currentLine.format": "${message}",
  // "gitlens.advanced.messages": {
  //   "suppressCommitNotFoundWarning": true,
  //   "suppressFileNotUnderSourceControlWarning": true,
  //   "suppressShowKeyBindingsNotice": true,
  //   "suppressUpdateNotice": true
  // },
  // Extensions
  "extensions.ignoreRecommendations": true,
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  // Highlight
  "highlight-matching-tag.styles": {
    "opening": {
      "name": {
        "underline": "#368ddc"
      }
    }
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "jupyter.insidersChannel": "weekly",
  "[dart]": {
    "editor.formatOnSave": true,
    "editor.formatOnType": true,
    // "editor.rulers": [
    //   80
    // ],
    "editor.selectionHighlight": false,
    "editor.suggest.snippetsPreventQuickSuggestions": false,
    "editor.suggestSelection": "first",
    "editor.tabCompletion": "onlySnippets",
    "editor.wordBasedSuggestions": false
  },
  "gitlens.hovers.currentLine.over": "line",
  "dart.previewLsp": true,
  "workbench.statusBar.visible": false,
  "workbench.editor.decorations.colors": false,
  "workbench.editor.decorations.badges": false,
  "codestream.email": "me@ari.io",
  "editor.autoIndent": "full",
  "window.zoomLevel": -1
}
