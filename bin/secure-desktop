#!/bin/bash

USER:=$NORD_USER
PASS:=$NORD_PASS
CONNECT:=Mexico
TECHNOLOGY:=NordLynx

docker run -ti --rm --cap-add=NET_ADMIN --cap-add=SYS_MODULE \
		--device /dev/net/tun --name vpn \
		-p 6080:80 \
		--sysctl net.ipv4.conf.all.rp_filter=2 \
            -e USER="$USER" -e PASS="$PASS" \
            -e TECHNOLOGY=$TECHNOLOGY -d bubuntux/nordvpn:3.7.4


docker run -it --rm --net=container:vpn -v /dev/shm:/dev/shm dorowu/ubuntu-desktop-lxde-vnc
